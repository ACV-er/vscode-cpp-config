{
    "version": "0.1.0",
    "command": "C:\\\\Windows\\sysnative\\bash.exe",
    "isShellCommand": true,
    "args": [
        "-c"
    ],
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "mkdir -p build && cd build && cmake .. && make"
            ],
            "isBuildCommand": true,
            "problemMatcher": {
                "owner": "c",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "tidy",
            "args": [
                "clang-tidy -extra-arg-before=-x -extra-arg-before=c -extra-arg=-std=c99 ${fileBasename} --"
            ],
            "problemMatcher": {
                "owner": "c",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "fix",
            "args": [
                "clang-tidy -fix -fix-errors -extra-arg-before=-x -extra-arg-before=c -extra-arg=-std=c99 ${fileBasename} --"
            ],
            "problemMatcher": {
                "owner": "c",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^$"
                }
            }
        },
        {
            "taskName": "cmake-add-debug",
            "args": [
                "sed -i 's/-g -O0 -fno-inline -fno-omit-frame-pointer -std=c99/-std=c99/' -- CMakeLists.txt && sed -i 's/-std=c99/-g -O0 -fno-inline -fno-omit-frame-pointer -std=c99/' -- CMakeLists.txt && mkdir -p build && cd build && cmake .."
            ]
        }
    ]
}