{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Launch",

            // The executable path for debugging:
            "program": "${workspaceRoot}/build/${fileBasenameNoExtension}",

            "preLaunchTask": "build",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build/",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Follow child processes",
                        "text": "set follow-fork-mode child",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Detach on fork",
                        "text": "set detach-on-fork off",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Follow child processes",
                        "text": "set follow-fork-mode child",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Detach on fork",
                        "text": "set detach-on-fork off",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}
